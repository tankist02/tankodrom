{
    "name": "Andrew Dev Container",
    "dockerFile": "Dockerfile",
    "containerUser": "andrew",
    "remoteUser": "andrew",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations":{
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	}
}
